 SELECT * FROM Donor;
 SELECT * FROM Blood_Stock;
 SELECT * FROM Receiver;

 SELECT * FROM Donor
 WHERE blood_group = 'A+';

SELECT blood_group, units_available 
FROM Blood_Stock;

 UPDATE Blood_Stock
 SET units_available = units_available + 1
 WHERE blood_group = 'A+';

 SELECT d.donor_id,
 d.name AS donor_name,
 d.blood_group,
 b.units_available,
 b.expiry_date
 FROM Donor d
 JOIN Blood_Stock b
 ON d.blood_group = b.blood_group;

 SELECT r.receiver_id,
 r.name AS receiver_name,
 r.blood_group,
 r.units_required,
 b.units_available
 FROM Receiver r
 JOIN Blood_Stock b
 ON r.blood_group = b.blood_group;

SELECT r.name AS receiver_name,
 r.blood_group,
 r.units_required,
 b.units_available
 FROM Receiver r
 JOIN Blood_Stock b
 ON r.blood_group = b.blood_group
 WHERE b.units_available >= r.units_required;
