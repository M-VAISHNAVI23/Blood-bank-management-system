 CREATE TABLE Donor (
 donor_id INT PRIMARY KEY,
 name VARCHAR(50),
 age INT,
 gender VARCHAR(10),
 blood_group VARCHAR(5),
 contact_no VARCHAR(15),
 last_donation DATE
 );

 CREATE TABLE Blood_Stock (
 stock_id INT PRIMARY KEY,
 blood_group VARCHAR(5),
 units_available INT,
 expiry_date DATE
 );

 CREATE TABLE Receiver (
 receiver_id INT PRIMARY KEY,
 name VARCHAR(50),
 blood_group VARCHAR(5),
 units_required INT,
 hospital_name VARCHAR(50),
 request_date DATE
 );

